{% extends 'base.html.twig' %}

{% block title %}Gutschein index{% endblock %}

{% block body %}
    <h1>Gutscheine</h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Betrag</th>
                <th class="d-none d-md-table-cell">Bemerkung</th>
                <th class="d-none d-sm-table-cell">Datum</th>
                <th>Bezahlt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for gutschein in gutscheins %}
            <tr>
                <td><a href="{{ path('gutschein_show', {'id': gutschein.id}) }}">{{ gutschein.gsName }}</a></td>
                <td>{{ gutschein.gsBetrag | number_format(2, ',', '0')  }}€</td>
                <td class="d-none d-md-table-cell">{{ gutschein.gsBemerkung }}</td>
                <td class="d-none d-sm-table-cell">{{ gutschein.gsDate ? gutschein.gsDate|date('d.m.Y') : '' }}</td>
                <td>{{ gutschein.isPayed ? 'Ja' : 'Nein' }}</td>
                <td>
                    <a href="{{ path('gutschein_edit', {'id': gutschein.id}) }}"><i class="fas fa-edit"></i></a>
                    <a href="{{ path('gutschein_pdf_hash', {'hash': gutschein.hash}) }}"><i class="fas fa-print"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        <tr><td></td><td><strong>{{ sum  | number_format(2, ',', '.')  }}€</strong></td></tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('gutschein_new') }}">Neuer Gutschein</a>
{% endblock %}
